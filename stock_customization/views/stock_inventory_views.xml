<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="stock_inventory_view_form_inherit" model="ir.ui.view">
        <field name="name">stock.inventory.view.form.inherit</field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="inside">
                <group>
                    <field name="responsible_id"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="stock_inventory_view_tree_inherit" model="ir.ui.view">
        <field name="name">stock.inventory.view.tree.inherit</field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_ids']" position="after">
                <field name="responsible_id"/>
            </xpath>
        </field>
    </record>

</odoo>
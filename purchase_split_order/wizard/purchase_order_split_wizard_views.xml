<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="purchase_order_split_wizard_line_view_tree" model="ir.ui.view">
        <field name="name">purchase.order.split.wizard.line.view.tree</field>
        <field name="model">purchase.order.split.wizard.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="0" delete="0">
                <field name="currency_id" invisible="1"/>
                <field name="order_line_id" invisible="1"/>
                <field name="to_split"/>
                <field name="product_id"/>
                <field name="product_name"/>
                <field name="date_planned"
                       widget="date"
                       attrs="{'readonly': [('to_split', '=', False)]}"
                       optional="show"/>
                <field name="product_qty"
                       attrs="{'readonly': [('to_split', '=', False)]}"/>
                <field name="uom_id"/>
                <field name="price_unit"/>
                <field name="taxes_id"
                       widget="many2many_tags"
                       optional="hide"/>
                <field name="price_subtotal"/>
            </tree>
        </field>
    </record>

    <record id="purchase_order_split_wizard_view_form" model="ir.ui.view">
        <field name="name">purchase.order.split.wizard.view.form</field>
        <field name="model">purchase.order.split.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="order_id" invisible="1"/>
                        <field name="order_split_line_ids" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Split"
                            name="button_split"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="purchase_order_split_wizard_action" model="ir.actions.act_window">
        <field name="name">Split Order</field>
        <field name="res_model">purchase.order.split.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>

<?xml version='1.0' encoding='utf-8'?>
<odoo>

<template id="report_invoice_document_inherit" inherit_id="sk_invoice.smarttek_report_invoice_document">
    <xpath expr="//t[@t-if='not company']" position="after">
        <t t-if="o.partner_id.vat_id or o.partner_id.vat or o.partner_id.company_registry" t-set="is_b2b" t-value="1"/>
    </xpath>
    <xpath expr="//span[@t-field='line.name']" position="after">
        <br t-if="is_b2b"/>
        <div t-if="is_b2b" style="font-weight: normal;font-size: 12px;">
            <t t-if="line.product_hs_code">
                TARIC-Code: <span t-field="line.product_hs_code"/>;
            </t>
            <t t-if="line.product_origin">
                Origin: <span t-field="line.product_origin"/>;
            </t>
            <t t-if="line.total_weight">
                Total Weight: <span t-field="line.total_weight"/>;
            </t>
        </div>
    </xpath>
</template>

</odoo>

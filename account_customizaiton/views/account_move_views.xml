<?xml version='1.0' encoding='utf-8'?>
<odoo>

<record id="account_move_view_form_inherit" model="ir.ui.view">
    <field name="name">account.move.view.form.inherit</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
        <xpath expr="//page[@id='invoice_tab']//tree/field[@name='name']" position="after">
            <field name="product_hs_code" optional="show"/>
            <field name="product_origin_id" optional="show"/>
        </xpath>
        <xpath expr="//page[@id='invoice_tab']//tree/field[@name='quantity']" position="after">
            <field name="total_weight" optional="show"/>
        </xpath>
        <xpath expr="//page[@id='invoice_tab']//form//field[@name='product_id']" position="after">
            <field name="product_hs_code" optional="show"/>
            <field name="product_origin_id" optional="show"/>
        </xpath>
        <xpath expr="//page[@id='invoice_tab']//form//field[@name='quantity']" position="after">
            <field name="total_weight" optional="show"/>
        </xpath>
    </field>
</record>

</odoo>

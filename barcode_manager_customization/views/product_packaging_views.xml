<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_packaging_delivery_form_extended" model="ir.ui.view">
        <field name="name">product.packaging.form.delivery.extended</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="delivery.product_packaging_delivery_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[last()]" position="before">
                <group>
                    <group>
                        <field name="packing_type"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//label[@for='max_weight']" position="before">
                <label for="weight"/>
                <div class="o_row" name="weight">
                    <field name="weight"/>
                    <span><field name="weight_uom_name"/></span>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
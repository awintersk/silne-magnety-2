<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="purchase_report_order_hs" model="report.paperformat">
        <field name="name">Custom Paperformat for the HS report</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Landscape</field>
        <field name="dpi">96</field>
    </record>

    <record id="action_purchase_report_order_hs" model="ir.actions.report">
        <field name="name">HS Report</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">purchase_customization.report_purchase_order_hs</field>
        <field name="report_file">purchase_customization.report_purchase_order_hs</field>
        <field name="print_report_name">'HS Report - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_purchase_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="purchase_report_order_hs"/>
    </record>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchase_order_hs_document" inherit_id="purchase.report_purchaseorder_document" primary="True">
        <xpath expr="//table" position="replace">
            <table class="table table-sm o_main_table">
                <thead>
                    <tr>
                        <th name="th_product_image"/>
                        <th name="th_product_name">
                            <strong>Product Name</strong>
                        </th>
                        <th name="th_product_code">
                            <strong>Product Code</strong>
                        </th>
                        <th name="th_vendor_product_name">
                            <strong>Vendor Product Name</strong>
                        </th>
                        <th name="th_vendor_product_code">
                            <strong>Vendor Product Code</strong>
                        </th>
                        <th name="th_vendor_product_note">
                            <strong>Vendor Product Note</strong>
                        </th>
                        <th name="th_hs_code">
                            <strong>HS Code</strong>
                        </th>
                        <th name="th_hs_desc">
                            <strong>HS Description</strong>
                        </th>
                        <th name="th_qty">
                            <strong>Qty</strong>
                        </th>
                        <th name="th_net_weight">
                            <strong>Net Weight</strong>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="current_weight" t-value="0"/>
                    <t t-set="total_weight" t-value="0"/>
                    <t t-foreach="o.order_line" t-as="line">
                        <t t-set="current_weight" t-value="current_weight + line.net_weight"/>
                        <t t-set="total_weight" t-value="total_weight + line.net_weight"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td id="product_image">
                                    <img t-if="line.product_id.image_1024"
                                         class="rounded-circle o_report_product_img"
                                         t-attf-src="data:image/png;base64,#{line.product_id.image_1024}"
                                         alt="Product"/>
                                </td>
                                <td id="product_name">
                                    <span t-field="line.product_id.name"/>
                                </td>
                                <td name="product_code">
                                    <span t-field="line.product_id.default_code"/>
                                </td>
                                <td name="vendor_product_name">
                                    <span t-field="line.vendor_product_name"/>
                                </td>
                                <td name="vendor_product_code">
                                    <span t-field="line.vendor_product_code"/>
                                </td>
                                <td name="vendor_product_note">
                                    <span t-field="line.vendor_product_note"/>
                                </td>
                                <td name="hs_code">
                                    <span t-field="line.hs_code"/>
                                </td>
                                <td name="hs_description">
                                    <span t-field="line.hs_description"/>
                                </td>
                                <td name="qty">
                                    <span t-field="line.product_qty"/>
                                </td>
                                <td name="net_weight">
                                    <span t-field="line.net_weight"/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99" id="section">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_weight" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99" id="note">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>
                        <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td colspan="99" id="subtotal">
                                    <strong class="mr16">Weight</strong>
                                    <span t-esc="current_weight"/>
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
        </xpath>
        <xpath expr="//div[@id='total']" position="replace">
            <div id="total" class="row justify-content-end">
                <div class="col-4">
                    <table class="table table-sm">
                        <tr class="border-black o_total">
                            <td name="td_amount_total_label"><strong>Total Weight</strong></td>
                            <td class="text-right">
                                <span t-esc="total_weight"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </xpath>
    </template>

    <template id="report_purchase_order_hs">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="purchase_customization.report_purchase_order_hs_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>

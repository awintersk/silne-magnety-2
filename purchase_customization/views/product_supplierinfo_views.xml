<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_supplierinfo_view_tree_inherit" model="ir.ui.view">
        <field name="name">product.supplierinfo.view.tree.inherit</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_code']" position="after">
                <field name="product_note" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="product_supplierinfo_view_form_inherit" model="ir.ui.view">
        <field name="name">product.supplierinfo.view.form.inherit</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_code']" position="after">
                <field name="product_note" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>

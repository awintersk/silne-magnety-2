<odoo>
    <data>

        <record id="inv_notes_settings_view_form" model="ir.ui.view">
            <field name="name">inv.notes.settings.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="invoicing_settings" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="default_inv_notes">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Invoice Notes Country Groups</span>
                            <div class="text-muted">
                                Assign country groups to add invoice notes to invoice report
                            </div>
                            <span class="o_form_label">EU</span>
                            <div class="text-muted">
                                <field name="inv_eu_country_group"/>
                            </div>
                            <span class="o_form_label">Non EU</span>
                            <div class="text-muted">
                                <field name="inv_no_eu_country_group"/>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="invoice_notes_on_report" inherit_id="account.report_invoice_document"
              name="Invoice Notes on Report" priority="40">
        <xpath expr="//span[@t-field='o.narration_top']/parent::p/parent::div" position="after">
            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
            <div style="margin-bottom:4px;" t-if="o.invoice_message and not print_wo_notes">
                <p t-if="o.invoice_message" name="invoice_message">
                    <span t-field="o.invoice_message"/>
                </p>
            </div>
            <div style="display: block;clear: both;content: '';"></div>
        </xpath>
    </template>

    <record id="account_invoices_without_notes" model="ir.actions.report">
        <field name="name">Invoices without Notes</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">invoice_notes.report_invoice_wo_notes</field>
        <field name="report_file">invoice_notes.report_invoice_wo_notes</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
        <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
        <field name="binding_model_id" ref="model_account_move"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_invoice_wo_notes">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-set="print_wo_notes" t-value="True"/>
                <t t-if="o._get_name_invoice_report() == 'account.report_invoice_document'"
                   t-call="account.report_invoice_document" t-lang="lang"/>
            </t>
        </t>
    </template>
</odoo>

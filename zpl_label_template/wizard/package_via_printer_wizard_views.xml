<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="package_via_printer_wizard_form" model="ir.ui.view">
        <field name="name">package_via_printer_wizard_form</field>
        <field name="model">package.via.printer.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group class="my-0">
                    <field name="package_ids" widget="many2many_tags" readonly="1"/>
                </group>
                <group class="my-0">
                    <group>
                        <field name="report_id"
                               options="{'no_create': True, 'no_create_edit': True, 'no_edit': True}"/>
                    </group>
                    <group>
                        <field name="repeat" widget="integer"/>
                    </group>
                </group>
                <group class="my-0">
                    <field name="printer_id"
                           options="{'no_create': True, 'no_create_edit': True, 'no_edit': True}"/>
                </group>
                <footer>
                    <button special="cancel" class="btn btn-primary" string="Cancel"/>
                    <button name="print" type="object" class="btn btn-secondary" string="Print"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="package_via_printer_wizard_action" model="ir.actions.act_window">
        <field name="name">Package PrintNode Print</field>
        <field name="res_model">package.via.printer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>